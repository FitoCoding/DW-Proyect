
{{> navbar}}
{{> marquee}}
{{> head}}
  <!-- Aplicar la clase login-section que está en el CSS -->
  <section class="main-content container-fluid login-section">
    <div class="card bg-dark text-white p-5 card-login">
      <div class="card-body">
        <h3 class="mb-5 text-uppercase text-center">Iniciar Sesión</h3>

        <!-- Mostrar mensaje de error si existe -->
        {{#if error}}
          <div class="alert alert-danger">
            Credenciales incorrectas. Por favor, inténtelo de nuevo.
          </div>
        {{/if}}

        <!-- Formulario de inicio de sesión -->
        <form action="/auth/login" method="POST">
          <div class="mb-4">
            <label for="email" class="form-label">Correo Electrónico</label>
            <input id="email" name="email" type="email" class="form-control bg-dark text-secondary" placeholder="Email" required>
          </div>
          <div class="mb-4">
            <label for="password" class="form-label">Contraseña</label>
            <input id="password" name="password" type="password" class="form-control bg-dark text-secondary" placeholder="Contraseña" required>
          </div>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-ingresar">Ingresar</button> <!-- Utiliza la clase btn-ingresar -->
          </div>
        </form>

        <!-- Enlace para registrar una nueva cuenta -->
        <div class="mt-4 text-center">
          <p>¿No tienes una cuenta? <a href="/auth/register" class="link-registrarse">Regístrate aquí</a></p> <!-- Utiliza la clase link-registrarse -->
        </div>
      </div>
    </div>
  </section>

  {{> offcanvasCart}}
  {{> offcanvasProfile}}
  {{> footer}}
  
  <!-- Incluir Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
